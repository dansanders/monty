data1 = embed_str("data/1-example.txt")
data2 = embed_str("data/1.txt")
data = data2

fn main() -> Void:
    # TODO: Can `dial` be of type ZZ[100]?
    dial = 50
    count = 0
    for line in data.lines():
        dir, amount = /<[LR]>, <[1-9][0-9]* -> Int::parse>/.parse(line)
        match dir:
            "L" => dial = (dial - amount).mod(100)
            "R" => dial = (dial + amount).mod(100)
            _ => unreachable
        if dial == 0:
            count += 1
    print(count)
